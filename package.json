{
  "name": "taskflow-ai",
  "version": "0.1.0",
  "description": "A modern, AI-powered task management application with real-time synchronization",
  "type": "module",
  "author": {
    "name": "Joris Strakeljahn",
    "url": "https://github.com/jorisstrakeljahn"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jorisstrakeljahn/taskflow-ai.git"
  },
  "homepage": "https://github.com/jorisstrakeljahn/taskflow-ai#readme",
  "bugs": {
    "url": "https://github.com/jorisstrakeljahn/taskflow-ai/issues"
  },
  "keywords": [
    "task-management",
    "todo",
    "ai",
    "openai",
    "firebase",
    "react",
    "typescript",
    "productivity",
    "task-manager",
    "ai-powered"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 10",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,json,css}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,json,css}\"",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest --watch",
    "check": "npm run type-check && npm run lint && npm run format:check && npm run test:run",
    "check:fix": "npm run lint:fix && npm run format",
    "pre-commit": "npm run check",
    "deploy": "npm run build && firebase deploy --only hosting",
    "prepare": "husky"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "firebase": "^12.6.0",
    "lucide-react": "^0.556.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^14.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/coverage-v8": "^1.6.1",
    "@vitest/ui": "^1.6.1",
    "autoprefixer": "^10.4.22",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "husky": "^9.1.7",
    "jsdom": "^23.2.0",
    "lint-staged": "^15.5.2",
    "postcss": "^8.5.6",
    "prettier": "^3.7.4",
    "tailwindcss": "^3.4.18",
    "typescript": "^5.2.2",
    "vite": "^5.0.8",
    "vitest": "^1.6.1"
  }
}
